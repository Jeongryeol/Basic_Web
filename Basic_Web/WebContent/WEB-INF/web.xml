     <servlet-name>OrderServlet</servlet-name>
     <servlet-class>com.jsp.day02_pageMove.OrderSurvlet</servlet-class>
  </servlet>
  <servlet-mapping>
     <servlet-name>OrderServlet</servlet-name>
     <url-pattern>/ch17/day02/OrderServlet.do</url-pattern>
