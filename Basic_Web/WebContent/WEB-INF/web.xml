   <servlet>
     <servlet-name>SAME-NAME</servlet-name>
     <servlet-class>com.package.SurvletClass</servlet-class>
  </servlet>
  <servlet-mapping>
     <servlet-name>SAME-NAME</servlet-name>
     <url-pattern>/What_you_want_pattern</url-pattern>
